	foreground = "#010101"

[global]
    ### Display ###

    monitor = 0
    follow = mouse

    geometry = "540x5+880+34"
    indicate_hidden = yes
    shrink = no
    notification_height = 0
    padding = 12
    horizontal_padding = 12
    sort = yes
    idle_threshold = 120
    separator_color = "#00000000"
    separator_height = 15
    frame_width = 0

    ### Text ###
    font = ShureTechMono Nerd Font Mono 7
    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s</b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = no

    ### Icons ###
    icon_position = left
    max_icon_size = 64
    icon_path = .icons/oomox-colors-oomox-5/status/24:.icons/oomox-colors-oomox-5/devices/48:.icons/oomox-colors-oomox-5/apps/scalable:.icons/oomox-colors-oomox-5/actions/scalable

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run -p dunst:
    browser = /usr/bin/google-chrome-stable
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
