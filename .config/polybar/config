########################
#### GLOBAL
########################

[colors]
transparent = "00000000"
foreground = "${xrdb:foreground}"
background = "${xrdb:background}"
primary = "${xrdb:color4}"
secondary = "${xrdb:color6}"
alert = "ff0000"

[module/glyph-background]

type = custom/text
content-font = 3
content-padding = 0
content-background = ${colors.transparent}
content-foreground = ${colors.background}

[module/left-end-top-background]
inherit = module/glyph-background
content = 

[module/right-end-top-background]
inherit = module/glyph-background
content = 

[module/left-end-bottom-background]
inherit = module/glyph-background
content = 

[module/right-end-bottom-background]
inherit = module/glyph-background
content = 

[module/glyph-secondary]
type = custom/text
content-font = 3
content-padding = 0
content-background = ${colors.transparent}
content-foreground = ${colors.secondary}

[module/left-end-top-secondary]
inherit = module/glyph-secondary
content = 

[module/right-end-top-secondary]
inherit = module/glyph-secondary
content = 

[module/left-end-bottom-secondary]
inherit = module/glyph-secondary
content = 

[module/right-end-bottom-secondary]
inherit = module/glyph-secondary
content = 

[module/glyph-primary]
type = custom/text
content-font = 3
content-padding = 0
content-background = ${colors.transparent}
content-foreground = ${colors.primary}

[module/left-end-top-primary]
inherit = module/glyph-primary
content = 

[module/right-end-top-primary]
inherit = module/glyph-primary
content = 

[module/left-end-bottom-primary]
inherit = module/glyph-primary
content = 

[module/right-end-bottom-primary]
inherit = module/glyph-primary
content = 

#######################
#### TOP BAR
#######################

[bar/topbar]
width = 100%
height = 40
override-redirect = true
wm-restack = i3
background = ${colors.transparent}
foreground = ${colors.foreground}
cursor-click = pointer
cursor-scroll = ns-resize
line-size = 2
enable-ipc = true

font-0 = ShureTechMono Nerd Font Mono:antialias=true:size=13;3
font-1 = Weather Icons:size=12;1
font-2 = ShureTechMono Nerd Font Mono:antialias=true:size=26;6

modules-left = i3 right-end-bottom-background left-end-top-background host right-end-bottom-background left-end-top-background uptime right-end-bottom-background left-end-top-secondary dunst right-end-bottom-secondary left-end-top-primary vpn-status right-end-bottom-primary
modules-center = left-end-top-background title right-end-top-background
modules-right = left-end-bottom-secondary weather right-end-top-secondary left-end-bottom-background date right-end-top-background left-end-bottom-background network right-end-top-background left-end-bottom-primary cpu temperature memory right-end-top-primary left-end-bottom-secondary

tray-position = right
tray-background = ${colors.secondary}

[module/i3]
type = internal/i3
strip-wsnumbers = true
format = <label-state> <label-mode>

label-mode = %mode%
label-mode-background = ${colors.background}
label-focused = " %icon% %name% "
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.primary}
label-focused-underline = ${colors.primary}
label-unfocused = " %icon% %name% "
label-unfocused-background = ${colors.background}
label-urgent = " %icon% %name% "
label-urgent-background = ${colors.primary}
label-visible = " %icon% %name% "
label-visible-background = ${colors.background}

ws-icon-0 = 1: chat;
ws-icon-1 = 2: mail;
ws-icon-2 = 3: media;
ws-icon-3 = 4: term;
ws-icon-4 = 5: dash;
ws-icon-5 = 6: koii;
ws-icon-6 = 7: hfti;
ws-icon-7 = 8: www;
ws-icon-8 = 9: misc;

[module/host]
type=custom/script
exec = echo " $(whoami)@$(hostname) "
format-background = ${colors.background}
interval = 500

[module/uptime]
type=custom/script
exec = ~/.config/polybar/scripts/uptime.sh
format-background = ${colors.background}
interval = 60

[module/vpn-status]
type = custom/script
format-background = ${colors.primary}
exec = ~/.config/polybar/scripts/vpn-status.sh
interval = 1

[module/dunst]
type = custom/ipc
initial = 1
format-background = ${colors.secondary}
format-font = 3

hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}%{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}%{F#ff2200}%{F-}%{A}" &

[module/title]
type = internal/xwindow
format-background = ${colors.background}
format-padding = 1

[module/network]
type = internal/network
interface = enp0s31f6
interval = 3
format-connected = "<label-connected> "
format-connected-background = ${colors.background}
label-connected = " %downspeed:9%     祝%upspeed:9%"

format-disconnected = "<label-disconnected> "
format-disconnected-foreground = ${colors.primary}
label-disconnected = " Not Connected"

accumulate-stats = true

[module/date]
type = internal/date
interval = 1
date = %A, %d %B %Y
time = %H:%M
label = " %date% %time% "
format-background = ${colors.background}

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/weather.sh
interval = 600
label-font = 2
format-background = ${colors.secondary}

[module/cpu]
type = internal/cpu
interval = 1
label = " cpu: %percentage:2%% "
label-background = ${colors.primary}


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 80
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
interval = 1
format = <label>
format-warn = <label-warn>

label = " temp: %temperature-c% "
label-background = ${colors.primary}
label-warn = " temp: %temperature-c% "
label-warn-foreground = ${colors.foreground}
label-warn-background = #400

[module/memory]
type = internal/memory
interval = 2

format = <label>
label = " mem: %percentage_used%% "
label-background = ${colors.primary}

#######################
#### BOTTOM BAR
#######################

[bar/bottombar]
padding-right = 0
padding-left = 0
override-redirect = true
wm-restack = i3
height = 40


font-0 = ShureTechMono Nerd Font Mono:antialias=true:size=13;4
font-1 = ShureTechMono Nerd Font Mono:antialias=true:size=25;5
font-2 = ShureTechMono Nerd Font Mono:antialias=true:size=26;6
font-3 = Terminus:size=32;9

bottom = true
background = ${colors.transparent}
foreground = ${colors.foreground}

enable-ipc = true
modules-left = cava previous playpause next right-end-bottom-secondary left-end-top-background spotify right-end-bottom-background
modules-right = left-end-bottom-primary bluetooth right-end-top-primary left-end-bottom-background volume right-end-top-background left-end-bottom-secondary bluetooth-profile

[module/volume]
type = internal/pulseaudio
format-volume-background = ${colors.background}
format-volume = <ramp-volume> <label-volume>
format-muted = <ramp-volume> <label-muted>
format-muted-foreground = ${colors.alert}

label-volume = "%percentage%% "
label-muted = "%percentage%% "

ramp-volume-0 = " 奄"
ramp-volume-1 = " 奔"
ramp-volume-2 = " 墳"

click-left = pulsemixer --toggle-mute
scroll-up = pulsemixer --change-volume +1
scroll-down = pulsemixer --change-volume -1
interval = 5

[module/bluetooth]
type = custom/script
format-background = ${colors.primary}
exec = ~/.config/polybar/scripts/system-bluetooth-bluetoothctl.sh
tail = true
click-left = ~/.config/polybar/scripts/system-bluetooth-bluetoothctl.sh --toggle &

[module/bluetooth-profile]
format-background = ${colors.secondary}
format-padding = 1
label-font = 2
type = custom/script
exec = ~/.config/polybar/scripts/bluetooth-profiles.sh current
interval = 1
click-left = ~/.config/polybar/scripts/bluetooth-profiles.sh switch

[module/previous]
type = custom/script
format-background = ${colors.secondary}
label-font = 2
interval = 86400
format = "%{T3}<label>"
format-padding = 5
exec = echo ""
exec-if = "pgrep spotify"
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"

[module/next]
type = custom/script
format-background = ${colors.secondary}
label-font = 2
interval = 86400
format = "%{T3}<label>"
format-padding = 5
; Next song icon
exec = echo ""
; Check if spotify is running before displaying the icon
exec-if = "pgrep spotify"
format-underline = #1db954
line-size = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

[module/playpause]
type = custom/ipc
format-background = ${colors.secondary}
format-font = 2
; Default
hook-0 = echo ""
; Playing
hook-1 = echo ""
; Paused
hook-2 = echo ""
initial = 1
click-left = "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"

[module/spotify]
type = custom/script
interval = 1
format = <label>
label-background = ${colors.background}
exec = python3 ~/.config/polybar/scripts/spotify.py -f '{artist}: {song}'

[module/cava]
type = custom/script
exec = ~/.config/polybar/scripts/cava.py -b 20
tail = true
format-font = 4
format-foreground = ${colors.secondary}